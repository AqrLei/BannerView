<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BannerStyle">
        <item name="banner_indicator_checked_width">10dp</item>
        <item name="banner_indicator_normal_width">10dp</item>
        <item name="banner_use_ratio">true</item>
        <item name="widthHeightRatio">375:255</item>
        <item name="banner_can_loop">true</item>
    </style>

</resources>