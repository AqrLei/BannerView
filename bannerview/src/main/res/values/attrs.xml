<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="BannerView">
        <attr name="android:orientation"/>
        <!--宽高比-->
        <attr name="widthHeightRatio" format="string" />
        <!--是否开启自动轮播-->
        <attr name="isAuto" format="boolean" />
        <!--轮播间隔-->
        <attr name="interval" format="integer" />
        <attr name="banner_can_loop" format="boolean" />
        <attr name="banner_indicator_checked_color" format="color" />
        <attr name="banner_indicator_normal_color" format="color" />
        <attr name="banner_indicator_normal_width" format="dimension" />
        <attr name="banner_indicator_checked_width" format="dimension" />
        <attr name="banner_indicator_gap" format="dimension" />
        <attr name="banner_indicator_height" format="dimension" />
        <attr name="banner_start_reveal_width" format="dimension" />
        <attr name="banner_end_reveal_width" format="dimension" />
        <attr name="banner_page_margin" format="dimension"/>
        <attr name="banner_indicator_marginStart" format="dimension" />
        <attr name="banner_indicator_marginTop" format="dimension" />
        <attr name="banner_indicator_marginEnd" format="dimension" />
        <attr name="banner_indicator_marginBottom" format="dimension" />
        <attr name="banner_use_ratio" format="boolean" />

        <attr name="banner_indicator_style" format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="DASH" value="1" />
            <enum name="ROUND_RECT" value="2" />
        </attr>
        <attr name="banner_indicator_slide_mode" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="SMOOTH" value="1" />
            <enum name="WORM" value="2" />
        </attr>

        <attr name="banner_indicator_child_gravity" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="START" value="1" />
            <enum name="END" value="2" />
            <enum name="BIAS" value="3" />
        </attr>
        <attr name="banner_indicator_parent_position" format="enum">
            <enum name="INSIDE" value="0" />
            <enum name="BELOW" value="1" />
        </attr>
        <attr name="banner_indicator_child_bias" format="float" />
        <attr name="banner_indicator_vertical_parent_bias" format="float" />

        <attr name="banner_offset_page_limit" format="integer" />
        <attr name="banner_scroll_duration" format="integer" />

        <attr name="banner_page_transformer_style" format="enum">
            <enum name="NORMAL" value="0" />
            <enum name="MULTI_SCALE_IN" value="1" />
            <enum name="MULTI_OVERLAP" value="2" />
        </attr>

        <attr name="banner_transformer_scale" format="float" />

        <attr name="banner_indicator_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>

    </declare-styleable>
</resources>